import matplotlib.pyplot as plt
import pandas as pd

# Create the dataframe with the data from the image
data = {
    "S No.": [1, 2, 3, 4, 5, 6, 7, 8],
    "Subject": ["English", "Maths", "Science", "History", "Geography", "Computer Science", "Art", "Physical Education"],
    "Marks": [85, 95, 89, 99, 95, 100, 80, 95]
}

df = pd.DataFrame(data)

# Create a figure for the table
fig, ax = plt.subplots(figsize=(8, 4)) # Adjust size as needed
ax.axis('tight')
ax.axis('off')

# Create the table
table = ax.table(cellText=df.values, colLabels=df.columns, cellLoc='left', loc='center')

# Styling the table to look clean and professional
table.auto_set_font_size(False)
table.set_fontsize(12)
table.scale(1, 2) # Adjust row height

# Bold the headers
for (row, col), cell in table.get_celld().items():
    if row == 0:
        cell.set_text_props(weight='bold')
        cell.set_facecolor('#f0f0f0') # Light grey background for header

plt.title("Student Marks List", pad=20, fontsize=14, weight='bold')
plt.show()